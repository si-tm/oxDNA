##############################
####  PROGRAM PARAMETERS  ####
##############################
sim_type = VMMC
backend = CPU
#debug = 1
seed = 42

##############################
####    SIM PARAMETERS    ####
##############################
; steps = 10
steps = STEPS

list_type = cells
ensemble = nvt
delta_translation = 0.22
delta_rotation = 0.22

; T = 334 K
T = TEMP K
dt = 0.003
verlet_skin = 0.5

##############################
####    INPUT / OUTPUT    ####
##############################
topology = ./generated_..top
conf_file = ./generated_..dat
lastconf_file = ./last_conf_trap_..dat
trajectory_file = ./trajectory_trap_..dat
refresh_vel = 1
log_file = ./log_trap_..dat
no_stdout_energy = 1
restart_step_counter = 1
energy_file = ./energy_trap_..dat
;print_conf_interval = 100000000
print_conf_interval = 100000
print_energy_every = 100000
time_scale = linear
external_forces = 0
external_forces_file = ./forces_..dat

data_output_1 = {
	print_every = 10000
	; name = hb_./energy_trap_..dat
	name = ./hb_energy_trap_..dat
	col_1 = {
		type = step
	}
	col_2 = {
		type = hb_energy
	}
}
